{% extends "::base.html.twig" %}

{% block java %}
<script src="{{ asset('bundles/selhosareparation/js/workflow.js') }}" ></script>
{% endblock java %}

{% block container %}

    <div class="row-fluid">
        <div class="span6"><h2>Ordres de treball</h2></div>
        <div class="span2 pull-right"><a href="{{ path('selhosa_reparation_create') }}" class="btn btn-large btn-primary">Nova OT</a></div>
    </div>

	<div class="row-fluid">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>OT</th>
                    <th>Entrada</th>
                    <th>Tècnic</th>
                    <th>Accions</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for workorder in workorders %}
                <tr id="workorder-{{ workorder.id }}">
                    <td>{{ workorder.reference }}</td>
                    <td>20/01/2013</td>
                    <td>Francisco Pérez</td>
                    <td>
                        {% include 'SelhosaReparationBundle:WorkFlowButtons:' ~ buttonsTemplate %}
                    </td>
                    <td>
                        <div class="btn-group">
                            <button data-toggle="dropdown" class="btn dropdown-toggle">Action <span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                <li><a href="{{ path('selhosa_reparation_update', {'id' : workorder.id}) }}">Editar</a></li>
                                <li><a href="#">Ver historial</a></li>
                            </ul>
                        </div>
                    </td>
                </tr>
                {% endfor %}
            </tbody>
            <tfoot>
                <tr>
                    <td colspan="5"></td>
                </tr>
            </tfoot>
        </table>
	</div>
{% endblock container %}
