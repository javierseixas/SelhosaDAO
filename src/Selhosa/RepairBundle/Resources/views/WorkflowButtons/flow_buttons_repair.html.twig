<div class="btn-group">
    <div class="btn-group">
        <button class="btn btn-small dropdown-toggle" data-toggle="modal" data-target="#repairModal-{{ workorder.id }}">
            Reparada
            <span class="caret"></span>
        </button>
        <ul class="dropdown-menu">
            {% for categoryIntervention in workorder.electronic.category.interventions  %}
            <li><a href="#" class="change-workorderstatus" data-workorderid="{{ workorder.id }}" data-newstatuskeyword="close" data-metadata='{"intervention":"{{ categoryIntervention.intervention.id }}"}'>{{ categoryIntervention.intervention.description }}</a></li>
            {% endfor %}
        </ul>
    </div>

    <button class="btn btn-small change-workorderstatus" type="button" data-workorderid="{{ workorder.id }}" data-newstatuskeyword="orderMaterial">Nou material imputat</button>
</div>

{% include "SelhosaRepairBundle:RepairModal:modal.html.twig" %}